<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager Page</title>
    <style>
        /* General Styles */
        body {
            background-color: #ffebf1;
            font-family: 'Comic Sans MS', cursive, sans-serif;
            color: #ff4081;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #ff4081;
            font-size: 2em;
            margin-bottom: 30px;
        }
        .navigation_bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #fff0f5; /* Soft pink background for the bar */
            padding: 10px 20px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navigation_bar a {
            text-decoration: none;
            color: #ff69b4;
        }

        .logo {
            width: 90px;
            height: auto;
            border-radius: 50%;
        }

        .nav_bar_header h2 {
            display: inline-block;
            margin-left: 10px;
            font-size: 1.5em;
        }
        /* Search Form Styling */
        .search-container {
            text-align: center;
            margin-bottom: 30px;
        }

        input[type="text"] {
            padding: 12px;
            width: 280px;
            margin-right: 10px;
            border: 2px solid #ff4081;
            border-radius: 15px;
            font-size: 1.2em;
            background-color: #fff0f6;
            color: #ff4081;
        }

        button {
            padding: 12px 25px;
            background-color: #ff4081;
            color: white;
            border: none;
            border-radius: 15px;
            cursor: pointer;
            font-size: 1.2em;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #ff80ab;
        }

        /* Table Styling */
        table {
            width: 100%;
            margin-top: 40px;
            border-collapse: collapse;
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ff4081;
        }

        th {
            background-color: #ff4081;
            color: white;
            font-size: 1.1em;
        }

        td {
            background-color: #fff0f6;
            color: #ff4081;
            font-size: 1em;
        }

        tr:nth-child(even) {
            background-color: #fce4ec;
        }

        tr:hover {
            background-color: #ffebf1;
        }

        /* No Results Message */
        .no-results {
            text-align: center;
            font-size: 1.2em;
            color: #ff80ab;
            margin-top: 20px;
        }

        /* Container for Results */
        .results-container {
            text-align: center;
            margin-top: 20px;
        }

        /* css style for manager page*/
        .add-manager-container {
    margin-top: 40px;
    padding: 20px;
    background-color: #fff0f6;
    border: 2px solid #ff4081;
    border-radius: 15px;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
}

.add-manager-container h2 {
    color: #ff4081;
    font-size: 1.8em;
    margin-bottom: 20px;
}

.add-manager-container form label {
    display: block;
    margin-bottom: 5px;
    font-size: 1.1em;
}

.add-manager-container form input {
    width: calc(100% - 20px);
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ff4081;
    border-radius: 10px;
    font-size: 1em;
}

.add-manager-container form button {
    padding: 10px 20px;
    background-color: #ff4081;
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 1.2em;
    cursor: pointer;
}

.add-manager-container form button:hover {
    background-color: #ff80ab;
}

    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <div class="navigation_bar">
        <!-- Logo and Title -->
        <span>
            <a class="nav_bar_header" href="/" style="text-decoration: none; color: inherit;">
                <img class="logo" src="/images/logo.png" alt="Gym Logo">
                <h2></h2>
            </a>
        </span>

        <!-- Navigation Options -->
        <div>
            <a href="/admin_page">Admin Home</a> |
            <a> Manager Page</a> |
            <a href="/location_page">Locations</a> |
            <a href="/logout"></a>
          <!-- Logout Link with Form -->
            <a href="#" onclick="document.getElementById('logoutForm').submit();">Logout</a>

        </div>
    </div>
    <form id="logoutForm" action="/logout" method="POST" style="display: none;">
    </form>

    <h1>Welcome to the Manager Page!</h1>

    <!-- Search Section -->
    <div class="search-container">
        <form action="/search-manager" method="GET">
            <!-- Ensure searchTerm is correctly passed from the route -->
            <input type="text" name="q" value="<%= searchTerm || '' %>" placeholder="Search managers by name or ID" required>
            <button type="submit">Search</button>
        </form>
    </div>

    <!-- Results Section -->
    <div class="results-container">
        <% if (managers && managers.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Manager ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone Number</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% managers.forEach(manager => { %>
                        <tr>
                            <td><%= manager.manager_id %></td>
                            <td><%= manager.first_name %></td>
                            <td><%= manager.last_name %></td>
                            <td><%= manager.phone_number %></td>
                            <td> 
                                <form action="/deleteManager" method="POST">
                                    <input type="hidden" name="manager_id" value="<%= manager.manager_id %>" />
                                    <button type="submit">Delete</button>
                                </form>

                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="no-results">No managers found matching your search. Try again with different keywords!</p>
        <% } %>
    </div>
    <div class="add-manager-container">
        <h2>Add New Manager</h2>
        <form action="/add-manager" method="POST">
            <label for="first_name">First Name:</label>
            <input type="text" id="first_name" name="first_name" required placeholder="Enter first name">
            <br>
    
            <label for="last_name">Last Name:</label>
            <input type="text" id="last_name" name="last_name" required placeholder="Enter last name">
            <br>
    
            <label for="phone_number">Phone Number:</label>
            <input type="text" id="phone_number" name="phone_number" required placeholder="Enter phone number">
            <br>
    
            <button type="submit">Add Manager</button>
        </form>
    </div>
    

</body>
</html>