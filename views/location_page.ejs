<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Locations</title>
    <style>
        /* General Styles */
        body {
            background-color: #ffebf1;
            font-family: 'Comic Sans MS', cursive, sans-serif;
            color: #ff4081;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #ff4081;
            font-size: 2em;
            margin-bottom: 30px;
        }

        .navigation_bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #fff0f5;
            padding: 10px 20px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navigation_bar a {
            text-decoration: none;
            color: #ff69b4;
        }

        .logo {
            width: 90px;
            height: auto;
            border-radius: 50%;
        }

        .nav_bar_header h2 {
            display: inline-block;
            margin-left: 10px;
            font-size: 1.5em;
        }

        /* Table Styling */
        table {
            width: 100%;
            margin-top: 40px;
            border-collapse: collapse;
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ff4081;
        }

        th {
            background-color: #ff4081;
            color: white;
            font-size: 1.1em;
        }

        td {
            background-color: #fff0f6;
            color: #ff4081;
            font-size: 1em;
        }

        tr:nth-child(even) {
            background-color: #fce4ec;
        }

        tr:hover {
            background-color: #ffebf1;
        }

        /* No Results Message */
        .no-results {
            text-align: center;
            font-size: 1.2em;
            color: #ff80ab;
            margin-top: 20px;
        }

        /* Container for Results */
        .results-container {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <div class="navigation_bar">
        <span>
            <a class="nav_bar_header" href="/" style="text-decoration: none; color: inherit;">
                <img class="logo" src="/images/logo.png" alt="Gym Logo">
            </a>
        </span>

        <div>
            <a href="/admin_page">Admin Home</a> |
            <a href="/manager_page">Manager Page</a> |
            <a> Locations</a> |
            <a href="/logout"></a>
            <a href="#" onclick="document.getElementById('logoutForm').submit();">Logout</a>
        </div>
    </div>
    <form id="logoutForm" action="/logout" method="POST" style="display: none;"></form>

    <h1>All Locations</h1>

    <!-- Results Section -->
    <div class="results-container">
        <% if (locations && locations.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Location ID</th>
                        <th>Address</th>
                        <th>Capacity</th>
                        <th>Manager Name</th>
                        <th>Checked In</th>
                    </tr>
                </thead>
                <tbody>
                    <% locations.forEach(location => { %>
                        <tr>
                            <td><%= location.location_id %></td>
                            <td><%= location.address %></td>
                            <td><%= location.capacity %></td>
                            <td><%= location.manager_name %></td>
                            <td><%= location.checked_in_count %></td>

                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="no-results">No locations found.</p>
        <% } %>
    </div>
</body>
</html>
