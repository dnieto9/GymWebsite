<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Locations</title>
    <style>
        /* General Styles */
        body {
            background-color: #ffebf1;
            font-family: 'Comic Sans MS', cursive, sans-serif;
            color: #ff4081;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #ff4081;
            font-size: 2em;
            margin-bottom: 30px;
        }

        .navigation_bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #fff0f5;
            padding: 10px 20px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navigation_bar a {
            text-decoration: none;
            color: #ff69b4;
        }

        .logo {
            width: 90px;
            height: auto;
            border-radius: 50%;
        }

        .nav_bar_header h2 {
            display: inline-block;
            margin-left: 10px;
            font-size: 1.5em;
        }

        /* Table Styling */
        table {
            width: 100%;
            margin-top: 40px;
            border-collapse: collapse;
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ff4081;
        }

        th {
            background-color: #ff4081;
            color: white;
            font-size: 1.1em;
        }

        td {
            background-color: #fff0f6;
            color: #ff4081;
            font-size: 1em;
        }

        tr:nth-child(even) {
            background-color: #fce4ec;
        }

        tr:hover {
            background-color: #ffebf1;
        }

        /* No Results Message */
        .no-results {
            text-align: center;
            font-size: 1.2em;
            color: #ff80ab;
            margin-top: 20px;
        }

        /* Container for Results */
        .results-container {
            text-align: center;
            margin-top: 20px;
        }

        /* Form Styling */
        .new-location-form {
            margin-top: 50px;
            background-color: #fff0f5;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .new-location-form h2 {
            text-align: center;
            color: #ff4081;
            margin-bottom: 20px;
        }

        .new-location-form label {
            display: block;
            margin: 10px 0 5px;
            color: #ff4081;
        }

        .new-location-form input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ff4081;
            border-radius: 5px;
        }

        .new-location-form button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #ff4081;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .new-location-form button:hover {
            background-color: #ff80ab;
        }

        footer {
            background-color: #ffe4f3;
            padding: 20px;
            text-align: center;
            margin-top: 30px;
            font-size: 1.2em;
            color: #ff69b4;
        }

        footer p {
            margin: 0;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <div class="navigation_bar">
        <span>
            <a class="nav_bar_header" href="/" style="text-decoration: none; color: inherit;">
                <img class="logo" src="/images/logo.png" alt="Gym Logo">
            </a>
        </span>

        <div>
            <a href="/admin_page">Admin Home</a> |
            <a> Locations</a> |
            <a href="/logout"></a>
            <a href="#" onclick="document.getElementById('logoutForm').submit();">Logout</a>
        </div>
    </div>
    <form id="logoutForm" action="/logout" method="POST" style="display: none;"></form>

    <h1>All Locations</h1>

    <!-- Results Section -->
    <div class="results-container">
        <% if (locations && locations.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Location ID</th>
                        <th>Address</th>
                        <th>Capacity</th>
                        <th>Manager Name</th>
                        <th>Checked In</th>
                    </tr>
                </thead>
                <tbody>
                    <% locations.forEach(location => { %>
                        <tr>
                            <td><%= location.location_id %></td>
                            <td><%= location.address %></td>
                            <td><%= location.capacity %></td>
                            <td><%= location.manager_name %></td>
                            <td><%= location.checked_in_count %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="no-results">No locations found.</p>
        <% } %>
    </div>

    <!-- New Location Form -->
    <div class="new-location-form">
        <h2>Add New Location</h2>
        <form action="/add_location" method="POST">
            <label for="street">Street</label>
            <input type="text" id="street" name="street" required>
            <label for="city">City</label>
            <input type="text" id="city" name="city" required>
            <label for="state">State</label>
            <input type="text" id="state" name="state" required>
            <label for="zip">Zip</label>
            <input type="text" id="zip" name="zip" required>

            <label for="capacity">Capacity</label>
            <input type="number" id="capacity" name="capacity" min="1" required>

            <label for="manager-first-name">Manager First Name</label>
            <input type="text" id="manager-first-name" name="manager_first_name" required>

            <label for="manager-last-name">Manager Last Name</label>
            <input type="text" id="manager-last-name" name="manager_last_name" required>

            <label for="manager-phonenumber">Manager Phone Number</label>
            <input type="text" id="manager-phonenumber" name="manager_phonenumber" required>

            <button type="submit">Add Location</button>
        </form>
    </div>

    <footer>
        <p>Â© 2024 Fit Gals | Created by Dani, Natalie, and Daisy</p>
    </footer>
</body>
</html>
